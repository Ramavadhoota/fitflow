# ==========================================
# FITFLOW API CONFIGURATION
# ==========================================

# Server Configuration
HOST=0.0.0.0
PORT=8001
ENVIRONMENT=development
RELOAD=True
LOG_LEVEL=info

# ==========================================
# DATABASE CONFIGURATION
# ==========================================

# SQLite (Development - Default)
DATABASE_URL=sqlite:///./fitflow.db

# PostgreSQL (Production - Uncomment to use)
# DATABASE_URL=postgresql://user:password@localhost:5432/fitflow

# MySQL (Alternative - Uncomment to use)
# DATABASE_URL=mysql://user:password@localhost:3306/fitflow

# ==========================================
# GROQ API CONFIGURATION (PRIMARY)
# ==========================================

# Groq API Key - Get from https://console.groq.com/keys
GROQ_API_KEY=gsk_your_groq_api_key_here

# Groq Model Selection
# Available models:
# - mixtral-8x7b-32768 (Fast, 32k context)
# - llama2-70b-4096 (Powerful, 4k context)
# - gemma-7b-it (Fast, 8k context)
GROQ_MODEL=mixtral-8x7b-32768

# Groq Request Configuration
GROQ_TEMPERATURE=0.7
GROQ_MAX_TOKENS=2000
GROQ_TIMEOUT=30

# ==========================================
# FALLBACK LLM PROVIDERS (Optional)
# ==========================================

# OpenAI (Backup/Fallback)
# OPENAI_API_KEY=sk-proj-...
# OPENAI_MODEL=gpt-4-turbo

# Anthropic Claude (Backup/Fallback)
# ANTHROPIC_API_KEY=sk-ant-...
# ANTHROPIC_MODEL=claude-3-opus-20240229

# Google Gemini (Backup/Fallback)
# GOOGLE_API_KEY=AIzaSy...
# GOOGLE_MODEL=gemini-pro

# ==========================================
# LLM GENERAL CONFIGURATION
# ==========================================

# Primary LLM Provider
PRIMARY_LLM=groq

# Fallback order (if primary fails)
FALLBACK_LLMS=openai,anthropic,google

# Request Retry Configuration
LLM_RETRY_ATTEMPTS=3
LLM_RETRY_DELAY=1

# ==========================================
# COACHING CONFIGURATION
# ==========================================

# Coaching Strategy
COACHING_STYLE=supportive
MOTIVATION_TYPE=progressive
BARRIER_DETECTION=enabled

# Habit Formation
HABIT_FORMATION_DAYS=21
DAILY_TOUCHPOINT_COUNT=3
WEEKLY_CHECKIN_ENABLED=true

# Coaching Messages (using Groq AI)
COACHING_PROMPT_STYLE=personalized
COACHING_RESPONSE_LENGTH=medium

# ==========================================
# WORKOUT CONFIGURATION
# ==========================================

# Default Workout Settings
DEFAULT_SPLIT=ppl
VOLUME_MULTIPLIER=1.0
INTENSITY_LEVEL=moderate

# Equipment Defaults
AVAILABLE_EQUIPMENT=dumbbells,barbell,bench,cable_machine,resistance_bands
PREFER_COMPOUND_MOVEMENTS=true

# Exercise Database
EXERCISE_DATABASE_SIZE=200

# ==========================================
# NUTRITION CONFIGURATION
# ==========================================

# Macro Split (as percentages)
PROTEIN_PERCENTAGE=30
CARBS_PERCENTAGE=50
FAT_PERCENTAGE=20

# Calorie Surplus/Deficit
MUSCLE_GAIN_SURPLUS=300
FAT_LOSS_DEFICIT=500
MAINTENANCE_VARIANCE=0

# Meal Frequency
MEALS_PER_DAY=4
MEAL_TIMING_OPTIMIZATION=true

# Nutrition Planning (using Groq AI)
MEAL_PLANNING_ENABLED=true
DIETARY_RESTRICTIONS=none

# ==========================================
# PROGRESS TRACKING
# ==========================================

# Prediction Configuration
PREDICTION_WEEKS=4
CONFIDENCE_THRESHOLD=0.75
ANOMALY_DETECTION=enabled

# Recovery Assessment
MIN_SLEEP_HOURS=7
IDEAL_SLEEP_HOURS=8
ENERGY_THRESHOLD=5

# Progress Analytics (using Groq AI)
GENERATE_INSIGHTS=true
INSIGHT_FREQUENCY=weekly

# ==========================================
# API SETTINGS
# ==========================================

# CORS Configuration
CORS_ORIGINS=*
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=*
CORS_ALLOW_HEADERS=*

# Rate Limiting (if implemented)
RATE_LIMIT_ENABLED=false
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=60

# ==========================================
# LOGGING CONFIGURATION
# ==========================================

# Log Level: debug, info, warning, error, critical
LOG_LEVEL=info

# Log Format
LOG_FORMAT=standard

# API Call Logging
LOG_LLM_CALLS=true
LOG_LLM_RESPONSES=false

# ==========================================
# SECURITY SETTINGS
# ==========================================

# API Key Authentication (if needed)
API_KEY_ENABLED=false
API_KEY_SECRET=your_secret_key_here

# CORS Settings
ALLOW_CREDENTIALS=true
ALLOWED_ORIGINS=*

# ==========================================
# GROQ-SPECIFIC SETTINGS
# ==========================================

# Groq API Endpoint
GROQ_API_ENDPOINT=https://api.groq.com/openai/v1

# Groq Request Optimization
GROQ_USE_STREAMING=false
GROQ_BATCH_REQUESTS=false

# Groq Model Parameters
GROQ_TOP_P=0.95
GROQ_FREQUENCY_PENALTY=0.0
GROQ_PRESENCE_PENALTY=0.0

# ==========================================
# INTEGRATIONS
# ==========================================

# Fitness Tracker Integration
FITBIT_API_KEY=optional
APPLE_HEALTH_ENABLED=false
GARMIN_API_KEY=optional

# Social Media Sharing
FACEBOOK_SHARE_ENABLED=false
INSTAGRAM_SHARE_ENABLED=false
TWITTER_SHARE_ENABLED=false

# ==========================================
# DEVELOPMENT SETTINGS
# ==========================================

# Debug Mode
DEBUG=false

# Test Data
USE_TEST_DATA=false
TEST_USER_COUNT=5

# Cache Settings
CACHE_ENABLED=true
CACHE_TTL=3600

# ==========================================
# PRODUCTION SETTINGS
# ==========================================

# Only set these when deploying to production
# ENVIRONMENT=production
# RELOAD=False
# DEBUG=false
# CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
# DATABASE_URL=postgresql://user:password@prod-db:5432/fitflow

# ==========================================
# NOTES
# ==========================================

# 1. Replace 'gsk_your_groq_api_key_here' with your actual Groq API key
# 2. Get your Groq key from: https://console.groq.com/keys
# 3. For production, use PostgreSQL or MySQL instead of SQLite
# 4. Never commit this file with real secrets to version control
# 5. Use environment-specific .env files:
#    - .env.development
#    - .env.staging
#    - .env.production
# 6. Add .env to .gitignore to prevent accidental commits
# 7. Groq is FREE - no costs for API calls!
