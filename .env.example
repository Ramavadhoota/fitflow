# ==========================================
# FITFLOW API CONFIGURATION - EXAMPLE
# ==========================================

# Copy this file to .env and fill in your values
# DO NOT commit .env to version control

# Server Configuration
HOST=0.0.0.0
PORT=8001
ENVIRONMENT=development
RELOAD=True
LOG_LEVEL=info

# Database
DATABASE_URL=sqlite:///./fitflow.db

# ==========================================
# GROQ API CONFIGURATION
# ==========================================

# Get your free Groq API key from:
# https://console.groq.com/keys

GROQ_API_KEY=gsk_your_groq_api_key_here
GROQ_MODEL=mixtral-8x7b-32768
GROQ_TEMPERATURE=0.7
GROQ_MAX_TOKENS=2000
GROQ_TIMEOUT=30

# Available Groq Models:
# - mixtral-8x7b-32768  (Recommended - fastest, 32k context, free!)
# - llama2-70b-4096     (Powerful, 4k context, free!)
# - gemma-7b-it         (Fast, 8k context, free!)

# ==========================================
# OPTIONAL: Fallback LLM Providers
# ==========================================

# Uncomment if you want backup providers
# OPENAI_API_KEY=sk-proj-...
# ANTHROPIC_API_KEY=sk-ant-...
# GOOGLE_API_KEY=AIzaSy...

# ==========================================
# LLM CONFIGURATION
# ==========================================

PRIMARY_LLM=groq
LLM_RETRY_ATTEMPTS=3
LLM_RETRY_DELAY=1

# ==========================================
# COACHING
# ==========================================

COACHING_STYLE=supportive
MOTIVATION_TYPE=progressive
BARRIER_DETECTION=enabled
HABIT_FORMATION_DAYS=21
DAILY_TOUCHPOINT_COUNT=3

# ==========================================
# WORKOUT
# ==========================================

DEFAULT_SPLIT=ppl
VOLUME_MULTIPLIER=1.0
INTENSITY_LEVEL=moderate
AVAILABLE_EQUIPMENT=dumbbells,barbell,bench,cable_machine

# ==========================================
# NUTRITION
# ==========================================

PROTEIN_PERCENTAGE=30
CARBS_PERCENTAGE=50
FAT_PERCENTAGE=20
MUSCLE_GAIN_SURPLUS=300
FAT_LOSS_DEFICIT=500
MEALS_PER_DAY=4

# ==========================================
# PROGRESS TRACKING
# ==========================================

PREDICTION_WEEKS=4
CONFIDENCE_THRESHOLD=0.75
ANOMALY_DETECTION=enabled

# ==========================================
# API & SECURITY
# ==========================================

CORS_ORIGINS=*
RATE_LIMIT_ENABLED=false
API_KEY_ENABLED=false

# ==========================================
# GROQ-SPECIFIC
# ==========================================

GROQ_USE_STREAMING=false
GROQ_TOP_P=0.95
GROQ_FREQUENCY_PENALTY=0.0
GROQ_PRESENCE_PENALTY=0.0
